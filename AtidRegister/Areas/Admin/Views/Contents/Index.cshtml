@model IEnumerable<AtidRegister.Models.Content>

@{
    ViewData["Title"] = "תכנים";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<h1>תכנים</h1>

<p>
    <a asp-action="Create">הוספה</a>
    &nbsp; &nbsp;
    <a asp-action="Types">קטגוריות</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageFile)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <img src="data:@item.ImageFile" width="150"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type.Name)
            </td>
            <td>
                @Html.ActionLink("עריכה", "Edit", new { id=item.Id  }) |
                @Html.ActionLink("פרטים", "Details", new { id = item.Id }) |
                @Html.ActionLink("מחיקה", "Delete", new { id = item.Id })
            </td>
        </tr>
}
    </tbody>
</table>

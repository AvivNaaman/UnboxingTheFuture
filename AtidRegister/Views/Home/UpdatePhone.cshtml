@model AtidRegister.Models.ViewModels.UpdatePhoneViewModel

@{
    ViewData["Title"] = "עדכון מספר טלפון";
}
<partial name="_StudentNav" />
<div class="container mt-5 pt-3">
    <h1>עדכון מספר טלפון</h1>

    <h4>על מנת שנסיים את תהליך ההרשמה, הקלידו את מספר הטלפון שלכם ותקבלו עדכונים לנייד</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="UpdatePhone" method="post">
                <input type="hidden" asp-for="UserId" />
                <div class="form-group">
                    <label asp-for="PhoneNumber" class="control-label"></label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="שמירה" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
